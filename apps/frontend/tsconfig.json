{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "jsx": "preserve",
    "allowJs": true,
    "moduleResolution": "bundler",
    "noImplicitReturns": false,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@notia/shared": [
        "../../libs/shared/src"
      ],
      "@notia/shared/*": [
        "../../libs/shared/src/*"
      ]
    },
    "resolveJsonModule": true,
    "module": "esnext"
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "../../libs/shared/src/**/*",
    "next-env.d.ts",
    "src/types/*.d.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
