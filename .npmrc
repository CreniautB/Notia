# Augmenter le timeout pour éviter les erreurs sur les connexions lentes
network-timeout=60000

# Réduire la verbosité des logs
loglevel=warn

# Ignorer les scripts optionnels pour accélérer l'installation
ignore-scripts=false

# Utiliser le cache npm
prefer-offline=true
cache-min=3600

# Désactiver les audits pour accélérer l'installation
audit=false

# Générer un package-lock.json
package-lock=true

# Configuration de la façon dont npm gère la résolution des dépendances
legacy-peer-deps=true 